<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"> /
    <item android:state_pressed="true">//定义当button 处于pressed 状态时的形态。
        <shape>
            <gradient android:startColor="#ee0166ff"
                android:endColor="#111166ff"
                android:type="linear"
                android:angle="270"/>
            <stroke android:width="0dp" android:color="#ee000000" />
            <corners android:radius="3dp" />
            <padding android:left="2dp" android:top="2dp"
                android:bottom="2dp" android:right="2dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient android:startColor="#ff666666"
                android:endColor="#00111111"
                android:type="linear"
                android:angle="270"/>
            <stroke android:width="0dp" android:color="#ee000000" />
            <corners android:radius="0dp" />
            <padding android:left="2dp" android:top="2dp"
                android:bottom="2dp" android:right="2dp"/>
        </shape>
       </item>
